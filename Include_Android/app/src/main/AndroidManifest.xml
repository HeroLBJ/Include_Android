<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="perfect.android">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 拨打电话权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FloatingActionButton控件使用 -->
        <activity android:name=".material.FloatingActionButtonActivity" />
        <!-- 运行时权限获取 -->
        <activity android:name=".feature.new6.RuntimePermissionActivity" />
        <activity android:name=".view.recyclervier.simple.RecyclerViewActivity" />
        <activity android:name=".material.tablayout.TabLayoutSimpleActivity" />
        <activity android:name=".view.recyclervier.more.MoreRecyclerViewActivity" />
        <activity android:name=".tool.image.LookImageActivity" />
        <activity android:name=".other.imageselector.ImageSelectorActivity"/>
        <activity android:name=".other.imageselector.PreviewActivity"/>
    </application>

</manifest>